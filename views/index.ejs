<body>
<ion-app >
<ion-content>
    <ion-header translucent>
        <ion-toolbar color="primary">
            <ion-title>Bug Tracker</ion-title>
        </ion-toolbar>
    </ion-header>
    <ion-gird>
        <ion-row>
            <ion-col size-md="4" offset-md="4">
                <ion-card>
                    <ion-item class="log-field">
                        <ion-label position="fixed">Login</ion-label>
                        <ion-input></ion-input>
                    </ion-item>
                    <ion-item>
                        <ion-label position="fixed">Password</ion-label>
                        <ion-input></ion-input>
                    </ion-item>
                    <ion-button href="/view-bug" expand="block" fill="outline">Log in</ion-button>
                </ion-card>
            </ion-col>
        </ion-row>
    </ion-gird>

</ion-content>
</ion-app>
